<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="encrypted_prefs"/>
        <exclude domain="database" path="clipboard_cache.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer for app settings -->
        <include domain="sharedpref" path="app_settings"/>
    </device-transfer>
</data-extraction-rules>