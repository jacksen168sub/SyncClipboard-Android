<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许所有域名使用HTTP明文通信（开发和测试环境） -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.3</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android模拟器的主机地址 -->
    </domain-config>
    
    <!-- 生产环境可以更严格地配置域名白名单 -->
    <!-- 例如只允许特定的IP或域名 -->
    <!--
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">your-syncclipboard-server.com</domain>
    </domain-config>
    -->
</network-security-config>